{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./src/",
        "outDir": "./out-tsc/spec",
        "types": ["jasmine", "node"],
        "paths": {
            "@awg-app/*": ["app/*"],
            "@awg-core/*": ["app/core/*"],
            "@awg-shared/*": ["app/shared/*"],
            "@awg-views/*": ["app/views/*"],
            "@testing/*": ["testing/*"]
        }
    },
    "files": ["src/test.ts", "src/polyfills.ts"],
    "include": ["src/**/*.spec.ts", "src/**/*.d.ts", "src/testing"]
}
